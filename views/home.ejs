<html>
 <head>
    <title><%= title %></title>
    <script src="https://kit.fontawesome.com/0eff3d4dd2.js" crossorigin="anonymous"></script>
 </head>

<body>
      
     <div>
           
        <form action="/habit/create" id="habit-from" method="POST">
             <input type="text" name="habitData" id="habitData" placeholder="Type Habit Here.." required>
             <button type="submit">Add Habit</button>
        </form>
         
     </div>

     <div id="post-container">
       
   
         <ul>
               <% for(let i of habits_List){%>
                     <li>
                        
                        <span> <%= i.id %></span>
                         <span> <%= i.habitData %> </span>
                         <span>
                            <a href="/habit/delete/?id=<%=i.id%>">
                              <i class="fa-solid fa-trash"></i>
                            </a>
                        </span>
                        
                     </li>
                     
      
               <%}%>
         </ul>
         


     </div>
     
</body>
</html>